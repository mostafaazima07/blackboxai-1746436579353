# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=https://thewebvalue.com/app

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/webvalue_employee_manager

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=24h

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@thewebvalue.com

# SMTP Configuration (Fallback)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password

# Google Calendar API
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://thewebvalue.com/app/auth/google/callback

# Microsoft Graph API
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
MICROSOFT_REDIRECT_URI=https://thewebvalue.com/app/auth/microsoft/callback

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE_PATH=logs/app.log

# Security Configuration
CORS_ORIGIN=https://thewebvalue.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Admin Configuration
ADMIN_EMAIL=admin@thewebvalue.com
ADMIN_PASSWORD=your_secure_admin_password

# Calendar Integration
CALENDAR_REMINDER_MINUTES=30
CALENDAR_TIMEZONE=UTC

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# Cache Configuration
REDIS_URL=redis://localhost:6379

# API Version
API_VERSION=v1

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System is under maintenance. Please try again later."
